<Window Name="LoginWindow" xmlns="AlienUI.UIElements" Width="500" Height="300">
	<Grid GridDefine="(1*,1.5*)|(1*)" Horizontal="Stretch" Vertical="Stretch">
		<Image Name="Left" Color="#204363ff"/>
		<Image Name="Right" Color="#c2c2c2ff"/>
	</Grid>

	<EventTrigger Event="OnShow">
		<PlayStoryboard Target="Show"/>
	</EventTrigger>

	<StoryboardGroup>
		<Storyboard Name="Show">
			<Animation Target="LoginWindow" PropertyName="Alpha">
				<AnimationKey Time="0" Value="0"/>
				<AnimationKey Time="0.5" Value="1"/>
			</Animation>
		</Storyboard>
	</StoryboardGroup>
</Window>