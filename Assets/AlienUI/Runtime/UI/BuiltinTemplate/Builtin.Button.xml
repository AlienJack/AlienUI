<Image Name="Root" xmlns="AlienUI.UIElements" Horizontal="Stretch" Vertical="Stretch" Color="#383838FF"  Padding="1,1,1,1">
	<Image Name="Bg"  Horizontal="Stretch" Vertical="Stretch" Color="#FFFFFFFF">
		<Label Name="ButtonTxt" Content="{TemplateBinding Text,Mode=oneway}" Horizontal="Stretch" Vertical="Stretch" FontSize="24"/>
	</Image>

	<EventTrigger Event="OnPointerEnter">
		<PlayStoryboard Target="Hover"/>
	</EventTrigger>
	<EventTrigger Event="OnPointerExit">
		<PlayStoryboard Target="Normal"/>
	</EventTrigger>

	<StoryboardGroup>
		<Storyboard Name="Hover">
			<Animation Target="Bg" PropertyName="Color">
				<AnimationKey Time="0.2" Value="#BBBBBBFF"/>
			</Animation>
			<Animation Target="Root" PropertyName="Padding">
				<AnimationKey Time="0.05" Value="0"/>
			</Animation>
		</Storyboard>
		<Storyboard Name="Normal">
			<Animation Target="Bg" PropertyName="Color">
				<AnimationKey Time="0.2" Value="#FFFFFFFF"/>
			</Animation>
			<Animation Target="Root" PropertyName="Padding">
				<AnimationKey Time="0.05" Value="1,1,1,1"/>
			</Animation>
		</Storyboard>
	</StoryboardGroup>
</Image>
