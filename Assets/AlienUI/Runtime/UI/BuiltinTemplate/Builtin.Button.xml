<Image Name="Root" xmlns="AlienUI.UIElements" Horizontal="Stretch" Vertical="Stretch" Color="#000000FF"  Padding="5,5,5,5">
	<Image Name="Bg"  Horizontal="Stretch" Vertical="Stretch" Color="#FFFFFFFF">
		<Label Name="ButtonTxt" Content="{Binding Text,Mode=oneway}" Horizontal="Stretch" Vertical="Stretch" FontSize="24"/>
	</Image>

	<EventTrigger Event="OnPointerEnter">
		<PlayStoryBoard Storyboard="Hover"/>
	</EventTrigger>
	<EventTrigger Event="OnPointerExit">
		<PlayStoryBoard Storyboard="Normal"/>
	</EventTrigger>

	<StoryboardGroup>
		<Storyboard Name="Hover">
			<Animation Target="Bg" PropertyName="Color">
				<AnimationKey Time="0.2" Value="#BBBBBBFF"/>
			</Animation>
			<Animation Target="Root" PropertyName="Padding">
				<AnimationKey Time="0.2" Value="0"/>
			</Animation>
			<Animation Target="ButtonTxt" PropertyName="FontSize">
				<AnimationKey Time="0.2" Value="32"/>
			</Animation>
		</Storyboard>
		<Storyboard Name="Normal">
			<Animation Target="Bg" PropertyName="Color">
				<AnimationKey Time="0.2" Value="#FFFFFFFF"/>
			</Animation>
			<Animation Target="Root" PropertyName="Padding">
				<AnimationKey Time="0.2" Value="5,5,5,5"/>
			</Animation>
			<Animation Target="ButtonTxt" PropertyName="FontSize">
				<AnimationKey Time="0.2" Value="24"/>
			</Animation>
		</Storyboard>
	</StoryboardGroup>
</Image>
