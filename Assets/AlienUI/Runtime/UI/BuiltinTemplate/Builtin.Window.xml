<Image Name="WndBottom" xmlns="AlienUI.UIElements" Horizontal="Stretch" Vertical="Stretch" Color="#000000ff" Padding="2,2,2,2">
	<Grid Horizontal="Stretch" Vertical="Stretch" GridDefine="(1*)|(30px,1*)">
		<Image Name="Title" Color="#000000ff">
			<Button Text="X"  Width ="30" Height="30" Horizontal="Right" Vertical="Middle" Offset="-5,0" Command="{Binding CloseCmd}" />
		</Image>
		<Image Name="Content" Horizontal="Stretch" Vertical="Stretch" TemplateRoot="true"/>
	</Grid>

	<EventTrigger Event="OnShow">
		<PlayStoryboard Target="Show"/>
	</EventTrigger>

	<StoryboardGroup>
		<Storyboard Name="Show">
			<Animation Target="WndBottom" PropertyName="Alpha">
				<AnimationKey Time="0" Value="0"/>
				<AnimationKey Time="0.5" Value="1"/>
			</Animation>
		</Storyboard>
	</StoryboardGroup>
</Image>
